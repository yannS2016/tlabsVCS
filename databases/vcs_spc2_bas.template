############ SELECT THE NEXT PROCESSING BRANCH ##################
record(calc, "$(SYS):SPC2L-SEL-STAGE") {
  field(DESC, "Select processing branch")
  field(SCAN, "$(SCAN)") # THIS RECORD INIT PROCESSING
  field(CALC, "A?!B?C?$(S0):D?$(S2):$(S1):$(PNK):$(FAIL)")
  field(INPA, "$(SYS):SPC2L-INIT NPP")
##IF BUTTON 44 IS STILL PRESSED PNK IS ACTIVE##
  field(INPB, "$(SYS):SPC2L-PNK") 
  field(INPC, "$(SYS):SPC2L-CLR NPP")
## THIS FLAG ENSURE WE ONLY RESPOND TO A SINGLE EVENT ON BUT 44##
## IF SET WE IN STAGE 2 OF CLEARANCE OTHERWISE WE IN STAGE 1## 
  field(INPD, "$(SYS):WATCHMAN-SPC2-44-ACT.VAL")
  field(FLNK, "$(SYS):SPC2L-PROC-STAGE")
}
## THIS RECORDS PROPAGATE PROCESSING ##
record(fanout, "$(SYS):SPC2L-PROC-STAGE") {
  field(SCAN, "Passive")
  field(SELM, "Specified")
  field(SELL, "$(SYS):SPC2L-SEL-STAGE")
  field(LNK1, "$(SYS):SPC2L-VC")
  field(LNK2, "$(SYS):SPC2L-VNCS1")
  field(LNK3, "$(SYS):SPC2L-VNCS2")
  field(LNK4, "$(SYS):SPC2L-PNK")
}

##################################################################################
# monitor status of inputs which may cause clearance faillure
# SIGNAL TO SYS: SPC2L-VC?SPC2L-CLR && (HARDWARE STATUS RECORDS):FALSE
record(calcout, "$(SYS):SPC2L-VC") { 
  field(DESC, "SPC2L Vault clear stage")
  field(SCAN, "Passive")
  field(CALC, "!A?!B?C?$(SPC2PNK):$(VCOK):$(DA007ON):$(G6ON)")
  field(INPA, "$(SYS):SW-I-SPC2-G6.VAL NPP")
  field(INPB, "$(SYS):SPC2-DA007-CLSD.VAL PP") 
  field(INPC, "$(SYS):SPC2L-PNK.VAL PP")
  field(OUT,  "$(SYS):RST-SPC2L.PROC PP")  
  field(OOPT, "When Non-zero")
  field(PINI, "YES")
  field(VAL, "1") 
}
####################### RESET VAULT #################
record(seq, "$(SYS):RST-SPC2L") { # HANDLE BY SEQ
  field(SCAN, "Passive")
  field(PINI, "YES") # init status of outputs
  field(DOL1, "0")
  field(DOL2, "0")
  field(DOL3, "0")
  field(DOL4, "0")
  field(DOL5, "0")
  field(DOL6, "0")
  field(DOL7, "0")
  field(LNK1, "$(SYS):CS14-SPC2.VAL PP")
  field(LNK2, "$(SYS):CL14-SPC2.VAL PP")
  field(LNK3, "$(SYS):SPC2L-CLR.VAL PP")
  field(LNK4, "$(SYS):LED-WS-SPC2-44.VAL PP")
  field(LNK5, "$(SYS):LED-WS-SPC2-45.VAL PP")
  field(LNK6, "$(SYS):SPC2L-COUNTER.VAL PP")
  field(LNK7, "$(SYS):WATCHMAN-SPC2-44-ACT.VAL")
  field(SELM, "All")
}
