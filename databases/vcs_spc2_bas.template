record(calcout, "$(SYS):SPC2L-VNCS1") {
  field(DESC, "Vault clearance stage 1")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(FLNK, "$(SYS):SPC2LS1-OUT-STS") 
  field(CALC, "!A?!B?$(VCOK):$(DA007ON):$(B44OFF)")
  field(INPA, "$(SYS):WS-BUT-SPC2-44.VAL")
  field(INPB, "$(SYS):SPC2-DA007-CLSD.VAL PP")
  field(OUT,  "$(SYS):SPC2LS1-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero")  
}
########################################################
# ONLY CHNAGE OUTS STATE WHEN B40 IS PRESSED WHILE ROOF
# A2 AND DOOR A2 ARE CLOSED: THIS ENSURE WE DONT UNECCESSARLY WRITE TO OUTS

record(calcout, "$(SYS):SPC2LS1-OUT-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "A=$(DA007ON)?$(ON):$(OFF)")
  field(INPA, "$(SYS):SPC2L-VNCS1.VAL")
  field(OUT,  "$(SYS):RST-SPC2L.PROC PP")  
  field(OOPT, "When Non-zero") 
  field(VAL, "0")
}

record(seq, "$(SYS):SPC2LS1-WRT-OUTS") { # MAY BE HANDLED BY SEQ
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DOL4, "0")
  field(DOL5, "1")
  field(LNK1, "$(SYS):CS14-SPC2.VAL PP")
  field(LNK2, "$(SYS):CL14-SPC2.VAL PP")
  field(LNK3, "$(SYS):LED-WS-SPC2-44.VAL PP")
  field(LNK4, "$(SYS):SPC2L-COUNTER.VAL PP")
  field(LNK5, "$(SYS):WATCHMAN-SPC2-44-ACT.VAL PP")
  field(SCAN, "Passive")
  field(SELM, "All")
}
###################################################################################
# STAGE 2 CLERANCE EQUATIONS
## IF WATCHMAN 44 RELEASE CONTINUE CLEARANCE
## WE TEST IT IN "SPC2-WATCH-44-RLSD" RECORD
record(calcout, "$(SYS):SPC2L-VNCS2") {
  field(DESC, "Vault clearance stage 2")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(FLNK, "$(SYS):SPC2LS2-OUT-STS") 
  field(CALC, "A?!B?!C?!D?!E?$(VCOK):$(B45OFF):$(G6ON):$(TOUT):$(DA007ON):$(B44ON)")
  field(INPA, "$(SYS):SPC2-WATCH-44-RLSD.VAL PP")
  field(INPB, "$(SYS):SPC2-DA007-CLSD.VAL PP")
  field(INPC, "$(SYS):SPC2L-TIMEOUT.VAL NPP")  
  field(INPD, "$(SYS):SW-I-SPC2-G6.VAL")
  field(INPE, "$(SYS):WS-BUT-SPC2-45.VAL")
  field(OUT,  "$(SYS):SPC2LS2-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero") 
  field(VAL, "1")
}
####################### STAGE 2 OUTPUTS STATUS  #################

# IF PREVIOUS INTERLOCKS(ROOF A007 OR DOOR A007 OR TIMEOUT) CHANGED THEIR STATE
# RESET THE VAULT, OTHERWISE GATE G6 NEEDS TO BE CLOSED
# OR PRESS WATCHMAN 45
# OR RELEASE WATCHMAN 44 
record(calcout, "$(SYS):SPC2LS2-OUT-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "A=$(TOUT)||A=$(DA007ON)?$(ON):$(OFF)")
  field(INPA, "$(SYS):SPC2L-VNCS2.VAL")
  field(OUT,  "$(SYS):RST-SPC2L.PROC PP")  
  field(OOPT, "When Non-zero") 
  field(VAL, "0")
}
# THIS RECORDS IS PROCESSED ONLY WHEN SPC2L-VNCS2 RETRUN 0
# THAT IS SPC2L INTERLOCKS ARE CORRECT IN STAGE 2
record(seq, "$(SYS):SPC2LS2-WRT-OUTS") {
  field(SELM, "All")
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DLY2, "0.02")
  field(LNK1, "$(SYS):RST-SPC2L.PROC PP")
  field(LNK2, "$(SYS):SPC2L-CLR.VAL PP")
  field(LNK3, "$(SYS):LED-WS-SPC2-45.VAL PP")
  field(SCAN, "Passive")
}
########################## TIMER PROCEDURE #############################
# IN VERSION 2 OF THE CODE WE USE THE SAME TIMER SET FROM GROUND FLOOR 
record(calc, "$(SYS):SPC2L-COUNTER") {
  field(SCAN, "Passive")
  field(CALC, "B?A+1:0")
  field(INPA, "$(SYS):SPC2L-COUNTER.VAL")
  field(INPB, "$(SYS):WATCHMAN-SPC2-44-ACT.VAL")
}
record(calc, "$(SYS):SPC2L-TIMEOUT") {
  field(SCAN, "1 second")
  field(CALC, "A>=$(SPC2TOUT)?$(ON):$(OFF)")
  field(INPA, "$(SYS):SPC2L-COUNTER.VAL PP")
}
#################### WATCHMAN 44 RELEASE ##############################
record(calc, "$(SYS):SPC2-WATCH-44-RLSD") {
  field(CALC, "A&&B?$(ON):$(OFF)")
  field(INPA, "$(SYS):WS-BUT-SPC2-44.VAL")
  field(INPB, "$(SYS):WATCHMAN-SPC2-44-ACT.VAL")
}
#################### RECOVER FROM PANIQUE ################
record(calc, "$(SYS):SPC2L-PNK") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?$(ON):$(OFF)")
  field(INPA, "$(SYS):WS-BUT-SPC2-44.VAL")
}
#################### DOOR A007 CLOSED ##################################
record(calc, "$(SYS):SPC2-DA007-CLSD") {
  field(CALC, "!A&&!B?$(OFF):$(ON)")
  field(INPA, "$(SYS):SW-I-SPC2-A007.VAL")
  field(INPB, "$(SYS):SW-II-SPC2-A007.VAL")
}
