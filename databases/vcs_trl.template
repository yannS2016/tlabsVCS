  field(SCAN, "Passive")
  field(SELM, "Specified")
  field(SELL, "$(SYS):TRL-SEL-STAGE")
  field(LNK1, "$(SYS):TRL-VC")
  field(LNK2, "$(SYS):TRL-VNC")
  field(LNK3, "$(SYS):TRL-PNK")
}
