############ SELECT THE NEXT PROCESSING BRANCH ##################
record(calc, "$(SYS):SPC1BAS-SEL-STAGE") {
  field(DESC, "Select processing branch")
  field(SCAN, "$(SCAN)") # THIS RECORD INIT PROCESSING
  field(CALC, "A?!B?C?$(S0):D?$(S2):$(S1):$(PNK):$(FAIL)")
  field(INPA, "$(SYS):SPC1BAS-INIT NPP")
##IF BUTTON 42 IS STILL PRESSED PNK IS ACTIVE##
  field(INPB, "$(SYS):SPC1BAS-PNK") 
  field(INPC, "$(SYS):SPC1-CLR NPP")
## THIS FLAG ENSURE WE ONLY RESPOND TO A SINGLE EVENT ON BUT 42##
## IF SET WE IN STAGE 2 OF CLEARANCE OTHERWISE WE IN STAGE 1## 
  field(INPD, "$(SYS):WATCHMAN-SPC1-42-ACT.VAL")
  field(FLNK, "$(SYS):SPC1BAS-PROC-STAGE")
}
## THIS RECORDS PROPAGATE PROCESSING ##
record(fanout, "$(SYS):SPC1BAS-PROC-STAGE") {
  field(SCAN, "Passive")
  field(SELM, "Specified")
  field(SELL, "$(SYS):SPC1BAS-SEL-STAGE")
  field(LNK1, "$(SYS):SPC1BAS-VC")
  field(LNK2, "$(SYS):SPC1BAS-VNCS1")
  field(LNK3, "$(SYS):SPC1BAS-VNCS2")
  field(LNK4, "$(SYS):SPC1BAS-PNK")
}
####################################################################
# MONITOR THE STATUS OF INPUT CABLE
## SPC1-42 AND SPC1-43 CANNOT BE PRESSED AT THE SAME TIME
## THEREFORE IF SPC1-42 IS OFF SPC1-43 MUST BE ON
## SPC1-42 || SPC1-43 ? (CABLE CONNECTED):(CABLE DISCONNECTED)
## formula to monitor status of inputs and set output in stage 1
record(calc, "$(SYS):SPC1BAS-INPCAB-STS") {
  field(SCAN, "Passive") 
  field(CALC, "A||B?0:0")
  field(INPA, "$(SYS):WS-BUT-SPC1-42.VAL")
  field(INPB, "$(SYS):WS-BUT-SPC1-43.VAL")   
}
##################################################################################
# monitor status of inputs which may cause clearance faillure
# SIGNAL TO SYS: SPC1BAS-VC?SPC1-CLR && (HARDWARE STATUS RECORDS):FALSE
record(calcout, "$(SYS):SPC1BAS-VC") { 
  field(DESC, "SPC1BAS Vault clear stage")
  field(SCAN, "Passive")
  field(CALC, "!A?B?!C?!D?!E?F?$(SPC1PNK):$(VCOK):$(DA005AON):$(DA005ON):$(DA001ON):$(A005ON):$(RA2ON)")
  field(INPA, "$(SYS):SW-RF-A2-CLSD.VAL NPP")
  field(INPB, "$(SYS):SPC1-GF-CLR.VAL NPP")# SPC1 GROUND FLOOR MUST BE CLEARED
  field(INPC, "$(SYS):SPC1-DA001-CLSD.VAL PP") 
  field(INPD, "$(SYS):SPC1-DA005-CLSD.VAL PP")  
  field(INPE, "$(SYS):SPC1-DA005A-CLSD.VAL PP") 
  field(INPF, "$(SYS):SPC1BAS-PNK.VAL PP")
  field(OUT,  "$(SYS):RST-SPC1BAS.PROC PP")  
  field(OOPT, "When Non-zero")
  field(PINI, "YES")
  field(VAL, "1") 
}
####################### RESET VAULT #################
