record(calcout, "$(SYS):SPC1BAS-VNCS1") {
  field(DESC, "Vault clearance stage 1")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(FLNK, "$(SYS):SPC1BASS1-OUT-STS") 
  field(CALC, "!A?!B?C?!D?!E?$(VCOK):$(DA005AON):$(DA001ON):$(A005ON):$(RA2ON):$(B42OFF)")
  field(INPA, "$(SYS):WS-BUT-SPC1-42.VAL")
  field(INPB, "$(SYS):SW-RF-A2-CLSD.VAL")
  field(INPC, "$(SYS):SPC1-GF-CLR.VAL NPP")# SPC1 GROUND FLOOR MUST BE CLEARED
  field(INPD, "$(SYS):SPC1-DA001-CLSD.VAL PP") 
  field(INPE, "$(SYS):SPC1-DA005A-CLSD.VAL PP")
  field(OUT,  "$(SYS):SPC1BASS1-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero")   
}
########################################################
# ONLY CHNAGE OUTS STATE WHEN B40 IS PRESSED WHILE ROOF
# A2 AND DOOR A2 ARE CLOSED: THIS ENSURE WE DONT UNECCESSARLY WRITE TO OUTS

record(calcout, "$(SYS):SPC1BASS1-OUT-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "A=$(RA2ON)||A=$(A005ON)||A=$(DA001ON)||A=$(DA005AON)?$(ON):$(OFF)")
  field(INPA, "$(SYS):SPC1BAS-VNCS1.VAL")
  field(OUT,  "$(SYS):RST-SPC1BAS.PROC PP")  
  field(OOPT, "When Non-zero") 
  field(VAL, "0")
}

record(seq, "$(SYS):SPC1BASS1-WRT-OUTS") { # MAY BE HANDLED BY SEQ
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DOL4, "0")
  field(DOL5, "1")
  field(LNK1, "$(SYS):CS1-SPC1.VAL PP")
  field(LNK2, "$(SYS):CL1-SPC1.VAL PP")
  field(LNK3, "$(SYS):LED-WS-SPC1-42.VAL PP")
  field(LNK4, "$(SYS):SPC1-COUNTER.VAL PP")
  field(LNK5, "$(SYS):WATCHMAN-SPC1-42-ACT.VAL PP")
  field(SCAN, "Passive")
  field(SELM, "All")
}
####################################################################################################
# STAGE 2 CLERANCE EQUATIONS
## IF WATCHMAN 42 RELEASE CONTINUE CLEARANCE
## WE TEST IT IN "SPC1-WATCH-42-RLSD" RECORD
record(calcout, "$(SYS):SPC1BAS-VNCS2") {
  field(DESC, "Vault clearance stage 2")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(FLNK, "$(SYS):SPC1BASS2-OUT-STS") 
  field(CALC, "A?!B?C?!D?!E?!F?!G?!H?$(VCOK):$(B43OFF):$(DA005OFF):$(TOUT):$(DA005AON):$(DA001ON):$(A005ON):$(RA2ON):$(B42ON)")
  field(INPA, "$(SYS):SPC1-WATCH-42-RLSD.VAL PP")
  field(INPB, "$(SYS):SW-RF-A2-CLSD.VAL")
  field(INPC, "$(SYS):SPC1-GF-CLR.VAL NPP")# SPC1 GROUND FLOOR MUST BE CLEARED
  field(INPD, "$(SYS):SPC1-DA001-CLSD.VAL PP") 
  field(INPE, "$(SYS):SPC1-DA005A-CLSD.VAL PP")  
  field(INPF, "$(SYS):SPC1BAS-TIMEOUT.VAL NPP")
  field(INPG, "$(SYS):SPC1-DA005-CLSD.VAL PP") 
  field(INPH, "$(SYS):WS-BUT-SPC1-43.VAL")
  field(OUT,  "$(SYS):SPC1BASS2-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero") 
  field(VAL, "1")
}
####################### STAGE 2 OUTPUTS STATUS  #################

# IF PREVIOUS INTERLOCKS(ROOF A001 OR DOOR A001 OR TIMEOUT) CHANGED THEIR STATE
# RESET THE VAULT, OTHERWISE GATE A005 NEEDS TO BE CLOSED
# OR PRESS WATCHMAN 43
# OR RELEASE WATCHMAN 42 
record(calcout, "$(SYS):SPC1BASS2-OUT-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "A=$(B42ON)||A=$(B43OFF)||A=$(DA005OFF)?$(OFF):$(ON)")
  field(INPA, "$(SYS):SPC1BAS-VNCS2.VAL")
  field(OUT,  "$(SYS):RST-SPC1BAS.PROC PP")  
  field(OOPT, "When Non-zero") 
  field(VAL, "0")
}
# THIS RECORDS IS PROCESSED ONLY WHEN SPC1BAS-VNCS2 RETRUN 0
# THAT IS SPC1BAS INTERLOCKS ARE CORRECT IN STAGE 2
record(seq, "$(SYS):SPC1BASS2-WRT-OUTS") {
  field(SELM, "All")
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DLY2, "0.02")
  field(LNK1, "$(SYS):RST-SPC1BAS.PROC PP")
  field(LNK2, "$(SYS):SPC1-CLR.VAL PP")
  field(LNK3, "$(SYS):LED-WS-SPC1-43.VAL PP")
  field(SCAN, "Passive")
}
########################## TIMER PROCEDURE #############################
# IN VERSION 2 OF THE CODE WE USE THE SAME TIMER SET FROM GROUND FLOOR 
record(calc, "$(SYS):SPC1BAS-COUNTER") {
  field(SCAN, "Passive")
  field(CALC, "B?A+1:0")
  field(INPA, "$(SYS):SPC1BAS-COUNTER.VAL")
  field(INPB, "$(SYS):WATCHMAN-SPC1-42-ACT.VAL")
}
record(calc, "$(SYS):SPC1BAS-TIMEOUT") {
  field(SCAN, "1 second")
  field(CALC, "A>=$(SPC1TOUT)?$(ON):$(OFF)")
  field(INPA, "$(SYS):SPC1BAS-COUNTER.VAL PP")
}
#################### WATCHMAN 42 RELEASE ##############################
