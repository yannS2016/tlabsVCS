  field(DOL1, "0")
  field(DOL2, "0")
  field(DOL3, "0")
  field(DOL4, "0")
  field(DOL5, "0")
  field(DOL6, "0")
  field(DOL7, "0")
  field(LNK1, "$(SYS):CS1-SPC1.VAL PP")
  field(LNK2, "$(SYS):CL1-SPC1.VAL PP")
  field(LNK3, "$(SYS):SPC1-CLR.VAL PP")
  field(LNK4, "$(SYS):LED-WS-SPC1-42.VAL PP")
  field(LNK5, "$(SYS):LED-WS-SPC1-43.VAL PP")
  field(LNK6, "$(SYS):SPC1BAS-COUNTER.VAL PP")
  field(LNK7, "$(SYS):WATCHMAN-SPC1-42-ACT.VAL")
  field(SELM, "All")
}
