############ SELECT THE NEXT PROCESSING BRANCH ##################
record(calc, "$(SYS):VLI-SEL-STAGE") {
  field(DESC, "Select processing branch")
  field(SCAN, "$(SCAN)") # THIS RECORD INIT PROCESSING
  field(CALC, "A?!B?C?$(S0):D?$(S2):$(S1):$(PNK):$(INITFAIL)")
  field(INPA, "$(SYS):VLI-INIT")
##IF BUTTON 32 IS STILL PRESSED PNK IS ACTIVE##
  field(INPB, "$(SYS):VLI-PNK") 
  field(INPC, "$(SYS):VLI-SNC-CLR")
## THIS FLAG ENSURE WE ONLY RESPOND TO A SINGLE EVENT ON BUT 32##
## IF SET WE IN STAGE 2 OF CLEARANCE OTHERWISE WE IN STAGE 1## 
  field(INPD, "$(SYS):WATCHMAN-VLI-32-ACT.VAL")
  field(FLNK, "$(SYS):VLI-PROC-STAGE")
}
## THIS RECORDS PROPAGATE PROCESSING ##
record(fanout, "$(SYS):VLI-PROC-STAGE") {
  field(SCAN, "Passive")
  field(SELM, "Specified")
  field(SELL, "$(SYS):VLI-SEL-STAGE")
  field(LNK1, "$(SYS):VLI-VC")
  field(LNK2, "$(SYS):VLI-VNCS1")
  field(LNK3, "$(SYS):VLI-VNCS2")
  field(LNK4, "$(SYS):VLI-PNK")
}
##################################################################################
# monitor status of inputs which may cause clearance faillure
# SIGNAL TO SYS: VLI-VC?VLI-SNC-CLR && (HARDWARE STATUS RECORDS):FALSE
record(calcout, "$(SYS):VLI-VC") { 
  field(DESC, "VLI Vault clear stage")
  field(SCAN, "Passive")
  field(CALC, "!A?!B?C?$(VLIPNK):$(VCOK):$(G4ON):$(DA004ON)")
# IN LIVE APP USE A FLNK FROM  SW-I-VLI-A004 OR SW-I-VLI-A004 (SCAN=Intr) TO PROCESS THIS RECORD
# AND ACCES IT HERE WITH NPP OR ACCES IT WITH PP BUT USE NPP ON ITS INPUTS
  field(INPA, "$(SYS):VLI-DA004-CLSD.VAL PP")  
  field(INPB, "$(SYS):VLI-G4-CLSD.VAL PP")
  field(INPC, "$(SYS):VLI-PNK.VAL PP")
  field(OUT,  "$(SYS):RST-VLI.PROC PP")  
  field(OOPT, "When Non-zero")
  field(PINI, "YES")
  field(VAL, "1") 
}
####################### RESET VAULT #################
record(seq, "$(SYS):RST-VLI") { # HANDLE BY SEQ
  field(SCAN, "Passive")
  field(DOL1, "0")
  field(DOL2, "0")
  field(DOL3, "0")
  field(DOL4, "0")
  field(DOL5, "0")
  field(DOL6, "0")
  field(DOL7, "0")
  field(LNK1, "$(SYS):CS7-VLI.VAL PP")
  field(LNK2, "$(SYS):CL7-VLI.VAL PP")
  field(LNK3, "$(SYS):VLI-SNC-CLR.VAL PP")
  field(LNK4, "$(SYS):LED-WS-VLI-32.VAL PP")
  field(LNK5, "$(SYS):LED-WS-VLI-33.VAL PP")
  field(LNK6, "$(SYS):VLI-COUNTER.VAL PP")
  field(LNK7, "$(SYS):WATCHMAN-VLI-32-ACT.VAL")
  field(SELM, "All")
}

