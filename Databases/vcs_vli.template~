#################### RECOVER FROM PANIQUE ################

record(calc, "$(SYS):VLI-PNK") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?$(ON):$(OFF)")
  field(INPA, "$(SYS):WS-BUT-VLI-32.VAL")
  field(VAL, "0")
}
# formula to monitor status of inputs and set output in stage 1
record(calcout, "$(SYS):VLI-VNCS1") {
  field(DESC, "Vault clearance stage 1")
  field(SCAN, "Passive")
  field(CALC, "!A?$(VCOK):$(B32ON)")
  field(INPA, "$(SYS):WS-BUT-VLI-32.VAL")
  field(OUT,  "$(SYS):VLIS1-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero") 
  field(PINI, "YES")
  field(VAL, "1")  
}
####################### STAGE 1 OUTPUTS STATUS  #################

record(seq, "$(SYS):VLIS1-WRT-OUTS") { # MAY BE HANDLED BY SEQ
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DOL4, "0")
  field(DOL5, "1")
  field(LNK1, "$(SYS):CS7-VLI.VAL PP")
  field(LNK2, "$(SYS):CL7-VLI.VAL PP")
  field(LNK3, "$(SYS):LED-WS-VLI-32.VAL PP")
  field(LNK4, "$(SYS):VLI-COUNTER.VAL PP")
  field(LNK5, "$(SYS):WATCHMAN-VLI-32-ACT.VAL PP")
  field(SCAN, "Passive")
  field(SELM, "All")
}
# monitor status of inputs and set output in stage 2
####################################################################################################
## IF WATCHMAN 32 RELEASE CONTINUE CLEARANCE
## WE TEST IT IN "VLI-WATCH-32-RLSD" RECORD
record(calcout, "$(SYS):VLI-VNCS2") {
  field(DESC, "Vault clearance stage 2")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(FLNK, "$(SYS):VLIS2-OUT-STS") 
  field(CALC, "A?!B?!C?!D?!E?!F?!G?$(VCOK):$(B33ON):$(DA004S2ON):$(DA004S1ON):$(G4S2ON):$(G4S1ON):$(TOUT):$(B32OFF)")
  field(INPA, "$(SYS):VLI-WATCH-32-RLSD.VAL PP")
  field(INPB, "$(SYS):VLI-TIMEOUT.VAL")
  field(INPC, "$(SYS):SW-I-VLI-G4.VAL")
  field(INPD, "$(SYS):SW-II-VLI-G4.VAL")
  field(INPE, "$(SYS):SW-I-VLI-A004.VAL PP")
  field(INPF, "$(SYS):SW-II-VLI-A004.VAL PP")
  field(INPG, "$(SYS):WS-BUT-VLI-33.VAL")
  field(OUT,  "$(SYS):VLIS2-WRT-OUTS.PROC PP")  
  field(OOPT, "When Zero") 
  field(VAL, "1")
}

####################### STAGE 2 OUTPUTS STATUS  #################

# IF PREVIOUS INTERLOCKS(G4) CHANGED THEIR STATE
# RESET THE VAULT, OTHERWISE DOOR A004 NEEDS TO BE CLOSED
# OR PRESS WATCHMAN 33
# OR RELEASE WATCHMAN 32 
record(calcout, "$(SYS):VLIS2-OUT-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "A=$(G4S2ON)||A=$(G4S1ON)||A=$(TOUT)?$(ON):$(OFF)")
  field(INPA, "$(SYS):VLI-VNCS2.VAL")
  field(OUT,  "$(SYS):RST-VLI.PROC PP")  
  field(OOPT, "When Non-zero") 
  field(VAL, "0")
}
# THIS RECORDS IS PROCESSED ONLY WHEN VLI-VNCS2 RETRUN 0
# THAT IS VLI INTERLOCKS ARE CORRECT IN STAGE 2
record(seq, "$(SYS):VLIS2-WRT-OUTS") {
  field(SELM, "All")
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DLY2, "0.02")
  field(LNK1, "$(SYS):RST-VLI.PROC PP")
  field(LNK2, "$(SYS):VLI-SNC-CLR.VAL PP")
  field(LNK3, "$(SYS):LED-WS-VLI-33.VAL PP")
  field(SCAN, "Passive")
}
#################### WATCHMAN 32 RELEASE ##############################
record(calc, "$(SYS):VLI-WATCH-32-RLSD") {
  field(CALC, "A&&B?$(ON):$(OFF)")
  field(INPA, "$(SYS):WS-BUT-VLI-32.VAL")
  field(INPB, "$(SYS):WATCHMAN-VLI-32-ACT.VAL")
}
#################### DOOR A004 CLOSED ##################################
record(calc, "$(SYS):VLI-DA004-CLSD") {
  field(CALC, "!A&&!B?$(OFF):$(ON)")
  field(INPA, "$(SYS):SW-I-VLI-A004.VAL")
  field(INPB, "$(SYS):SW-II-VLI-A004.VAL")
}
#################### GATE G4 CLOSED ##################################
record(calc, "$(SYS):VLI-G4-CLSD") {
  field(CALC, "!A&&!B?$(OFF):$(ON)")
  field(INPA, "$(SYS):SW-I-VLI-G4.VAL")
  field(INPB, "$(SYS):SW-II-VLI-G4.VAL")
}
########################## TIMER PROCEDURE #############################
record(calc, "$(SYS):VLI-COUNTER") {
  field(SCAN, "Passive")
  field(CALC, "B?A+1:0")
  field(INPA, "$(SYS):VLI-COUNTER.VAL")
  field(INPB, "$(SYS):WATCHMAN-VLI-32-ACT.VAL")
}
record(calc, "$(SYS):VLI-TIMEOUT") {
  field(SCAN, "1 second")
  field(CALC, "A>=$(VLITOUT)?$(ON):$(OFF)")
  field(INPA, "$(SYS):VLI-COUNTER.VAL PP")
}
