## IF WATCHMAN 24 RELEASE CONTINUE CLEARANCE
## WE TEST THIS IN "SPE-WATCH-24-RLSD" RECORD
record(calcout, "$(SYS):SPE-W25-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?!B?!C?D&&!E?$(STOK):$(B25OFF):$(DA9S2OFF):$(DA9S1OFF):$(FAIL)")
  field(INPA, "$(SYS):SPE-FAIL-COND PP")
  field(INPB, "$(SYS):SW-I-SPE-A9.VAL")
  field(INPC, "$(SYS):SW-II-SPE-A9.VAL")
  field(INPD, "$(SYS):SPE-WATCH-24-RLSD.VAL PP")
  field(INPE, "$(SYS):WS-BUT-SPE-25 NPP")
  field(OUT,  "$(SYS):SPEW25-WRT-OUTS.PROC PP")  
  field(OOPT, "Transition To Zero") 
}
