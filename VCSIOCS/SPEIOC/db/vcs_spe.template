############ SELECT THE NEXT PROCESSING BRANCH ##################
record(calc, "$(SYS):SPE-SEL-STAGE") {
  field(DESC, "Select processing branch")
  field(SCAN, "$(SCAN)") # THIS RECORD INIT PROCESSING
  field(CALC, "!A?B?$(CLR):$(NCLR):$(PNK)")
##IF BUTTON 42 IS STILL PRESSED PNK IS ACTIVE##
  field(INPA, "$(SYS):SPE-PNK.VAL") # we intend the state of this record when leaving cleared state: old state
  field(INPB, "$(SYS):SPE-CLR NPP")
  field(FLNK, "$(SYS):SPE-PROC-STAGE")
}
## THIS RECORDS PROPADOOR PROCESSING ##
record(fanout, "$(SYS):SPE-PROC-STAGE") {
  field(SCAN, "Passive")
  field(SELM, "Specified")
  field(SELL, "$(SYS):SPE-SEL-STAGE")
  field(LNK1, "$(SYS):SPE-VC PP")
  field(LNK2, "$(SYS):SPE-VNC PP")
  field(LNK3, "$(SYS):SPE-PNK PP")
}
##################################################################################
# monitor status of inputs which may cause clearance faillure
# SIGNAL TO SYS: SPE-VC?SPE-SNC-CLR && (HARDWARE STATUS RECORDS):FALSE
record(calcout, "$(SYS):SPE-VC") { 
  field(DESC, "SPE Vault clear stage")
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?B?$(SPEPNK):$(STOK):A")
  field(INPA, "$(SYS):SPE-FAIL-COND.VAL PP")  
  field(INPB, "$(SYS):SPE-PNK.VAL PP")
  field(OUT,  "$(SYS):RST-SPE.PROC PP")  
  field(OOPT, "When Non-zero")
  #field(VAL, "1")# init to 1 : vault not cleared
}
####################### RESET VAULT #################
record(seq, "$(SYS):RST-SPE") { # HANDLE BY SEQ
  field(SCAN, "Passive")
  field(DOL1, "0")
  field(DOL2, "0")
  field(DOL3, "0")
  field(DOL4, "0")
  field(DOL5, "0")
  field(DOL6, "0")
  field(DOL7, "0")
  field(LNK1, "$(SYS):CS12-SPE PP")
  field(LNK2, "$(SYS):CL12-SPE PP")
  field(LNK3, "$(SYS):SPE-CLR PP")
  field(LNK4, "$(SYS):LED-WS-SPE-24 PP")
  field(LNK5, "$(SYS):LED-WS-SPE-25 PP")
  field(LNK6, "$(SYS):SPE-COUNTER PP")
  field(LNK7, "$(SYS):WATCHMAN-SPE-24-ACT PP")
  field(SELM, "All")
}
###################################################################################
#CLEARANCE UNDERWAY FAIL CONDITIONS
record(calcout, "$(SYS):SPE-FAIL-COND") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?!B?C&&D?$(DA9ON):$(STOK):$(TOUT):$(RA9ON)")
  field(INPA, "$(SYS):SW-RF-A9.VAL NPP") 
  field(INPB, "$(SYS):SPE-TIMEOUT NPP") 
  field(INPC, "$(SYS):SPE-CLR NPP")
  field(INPD, "$(SYS):SPE-DA9-CLSD PP")
  field(OUT,  "$(SYS):RST-SPE PP")  
  field(OOPT, "Transition To Non-zero")  
}

#######################################################################################
record(calc, "$(SYS):SPE-VNC") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?$(STOK):A")
  field(INPA, "$(SYS):SPE-W24-STS PP")  
}
###############################################################
# ONLY CHNAGE OUTS STATE WHEN B24 IS PRESSED WHILE ROOF
# A9 ARE CLOSED: THIS ENSURE WE DONT UNECCESSARLY WRITE TO OUTS
# WHEN ON IS RETURNED THIS MEANS THAT NO VAULT CLEARANCE WAS STARTED AFTER INIT: VAULT WAITING FOR CLEARANCE
# WHEN STOK IS RETURNED VAULT CLEARANCE STAGE 1 IS UNDERWAY

record(calcout, "$(SYS):SPE-W24-STS") {
  field(SCAN, "Passive")
  field(PINI, "YES")
  field(CALC, "!A?!B?!C?$(STOK):$(B24ON):!C?$(WFVC):D:A")
  field(INPA, "$(SYS):SPE-FAIL-COND PP")
  field(INPB, "$(SYS):WS-BUT-SPE-24 NPP")
  field(INPC, "$(SYS):WATCHMAN-SPE-24-ACT NPP")
  field(INPD, "$(SYS):SPE-W25-STS PP")
  field(OUT,  "$(SYS):SPEW24-WRT-OUTS.PROC PP")  
  field(OOPT, "Transition To Zero") 
}
####################### STAGE 1 OUTPUTS STATUS  #################
record(seq, "$(SYS):SPEW24-WRT-OUTS") { # HANDLE BY SEQ
  field(DOL1, "1")
  field(DOL2, "1")
  field(DOL3, "1")
  field(DOL4, "0")
  field(DOL5, "1")
  field(DOL6, "0")
  field(LNK1, "$(SYS):CS12-SPE PP")
  field(LNK2, "$(SYS):CL12-SPE PP")
  field(LNK3, "$(SYS):LED-WS-SPE-24 PP")
  field(LNK4, "$(SYS):SPE-COUNTER PP")
  field(LNK5, "$(SYS):WATCHMAN-SPE-24-ACT PP")
  field(LNK6, "$(SYS):SPE-VC") # RESET ANY PREVIOUS FAIL CONDITIONS
  field(SCAN, "Passive")
  field(SELM, "All")
}
