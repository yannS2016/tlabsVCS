#################### DOOR A004A CLOSED ##################################
record(calc, "$(SYS):TRL-DA004A-CLSD") {
  field(CALC, "!A&&!B?$(STOK):$(ON)")
  field(INPA, "$(SYS):SW-I-TRL-A004A.VAL")
  field(INPB, "$(SYS):SW-II-TRL-A004A.VAL")
}
#################### GATE G4 CLOSED ##################################
